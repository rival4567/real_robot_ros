<%- include('partials/header') %>
   
  <body onload="init()">
    <h1><img src="/images/kassow_robots_logo.jpg" id="img-h1" alt="logo"> Kassow Robots</h1>
    <main>
      <div id="display">
        <div id="urdf"></div>
        <button class="button" id="zoomOut" class="nav_button">-</button>
        <button class="button" id="zoomIn" class="nav_button">+</button>
        <button class="button" id="rotateDown" class="nav_button">Rotate Down</button>
        <button class="button" id="rotateUp" class="nav_button">Rotate Up</button>
        <button class="button" id="rotateLeft" class="nav_button">Rotate Left</button>
        <button class="button" id="rotateRight" class="nav_button">Rotate Right</button>
        <button class="button" id="showAxes" class="nav_button">Show Axes</button>
      </div>

      <div id="command_panel">
          <section id="pose_inputs">
            <form action="pose_form" onsubmit="return false;">
            <div>
              Pose Goal
            </div>
            <div id="position">Position
              <div>                
                <label for="pose_x">X: </label>
                <input type="number" id="pose_x" name="pose_x" value="0" step="0.01">
              </div>
              <div>
                <label for="pose_y">Y: </label>
                <input type="number" id="pose_y" name="pose_y" value="0" step="0.01">
              </div>
              <div>
                <label for="pose_z">Z: </label>
                <input type="number" id="pose_z" name="pose_z" value="0" step="0.01">
              </div>
            </div>
  
            <div id="orientation">Orientation
              <div>
                <label for="orientation_x">X: </label>
                <input type="number" id="orientation_x" name="orientation_x" value="0" step="0.01">
              </div>
              <div>
                <label for="orientation_y">Y: </label>
                <input type="number" id="orientation_y" name="orientation_y" value="0" step="0.01">
              </div>
              <div>                
                <label for="orientation_z">Z: </label>
                <input type="number" id="orientation_z" name="orientation_z" value="0" step="0.01">
              </div>
              <div>
                <label for="orientation_w">W: </label>
                <input type="number" id="orientation_w" name="orientation_w" value="0" step="0.01">
              </div>
            </div> 
            <div id="pose_buttons">             
              <button class="button" id="sendPoseGoal">Send Goal!</button>
              <input class="button" type="reset" id="joint_reset" name="joint_reset" value="Reset"/>
            </div>           
          </form>
          </section>
          
            <section id="joint_inputs">
              <form id="joint_form" onsubmit="return false;">
              <div>Joint Goal</div>
              <div>
                <label for="joint_1">joint_1</label>
                <input type="range" id="joint_1_slider" name="joint_1" min="-180" max="180" step="1" oninput="this.nextElementSibling.value = this.value">
                <input type="number" id="joint_1_number" class="manipulator_joint" value="0" min="-180" max="180" step="1" placeholder="0&#176;" oninput="this.previousElementSibling.value = this.value;">  
              </div>
              
              <div>
                <label for="joint_2">joint_2</label>
                <input type="range" id="joint_2_slider" name="joint_2" min="-70" max="180" step="1" oninput="this.nextElementSibling.value = this.value">
                <input type="number" id="joint_2_number" class="manipulator_joint" value="0" min="-70" max="180" step="1" placeholder="0&#176;" oninput="this.previousElementSibling.value = this.value;">  
              </div>
    
              <div>
                <label for="joint_3">joint_3</label>
                <input type="range" id="joint_3_slider" name="joint_3" min="-180" max="180" step="1" oninput="this.nextElementSibling.value = this.value">
                <input type="number" id="joint_3_number" class="manipulator_joint" value="0" min="-180" max="180" step="1" placeholder="0&#176;" oninput="this.previousElementSibling.value = this.value;">  
              </div>
    
              <div>        
                <label for="joint_4">joint_4</label>
                <input type="range" id="joint_4_slider" name="joint_4" min="-70" max="180" step="1" oninput="this.nextElementSibling.value = this.value">
                <input type="number" id="joint_4_number" class="manipulator_joint" value="0" min="-70" max="180" step="1" placeholder="0&#176;" oninput="this.previousElementSibling.value = this.value;">
              </div>
    
              <div>
                <label for="joint_5">joint_5</label>
                <input type="range" id="joint_5_slider" name="joint_5" min="-180" max="180" step="1" oninput="this.nextElementSibling.value = this.value">
                <input type="number" id="joint_5_number" class="manipulator_joint" value="0" min="-180" max="180" step="1" placeholder="0&#176;" oninput="this.previousElementSibling.value = this.value;"> 
              </div>
    
              <div>
                <label for="joint_6">joint_6</label>
                <input type="range" id="joint_6_slider" name="joint_6" min="-180" max="180" step="1" oninput="this.nextElementSibling.value = this.value">
                <input type="number" id="joint_6_number" class="manipulator_joint" value="0" min="-180" max="180" step="1" placeholder="0&#176;" oninput="this.previousElementSibling.value = this.value;">  
              </div>
    
              <div>
                <label id="tool_io_label" for="joint_tool_io">tool_io</label>
                <input type="range" id="joint_tool_io_slider" name="joint_tool_io" min="-180" max="180" step="1" oninput="this.nextElementSibling.value = this.value">
                <input type="number" id="joint_tool_io_number" class="manipulator_joint" value="0" min="-180" max="180" step="1" placeholder="0&#176;" oninput="this.previousElementSibling.value = this.value;">  
              </div>
              <div>
                <label for="joint_f">joint_f</label>
                <input type="range" id="joint_f_slider" name="joint_f" min="0" max="46" step="1" oninput="this.nextElementSibling.value = this.value">
                <input type="number" id="joint_f_number" value="0" min="0" max="46" step="1" placeholder="0&#176;" oninput="this.previousElementSibling.value = this.value;">  
              </div>
              <div id="joint_buttons">             
                <button class="button" id="sendJointGoal">Send Goal!</button>
                <input class="button" type="reset" id="joint_reset" name="joint_reset" value="Reset"/>
              </div>

            </section>
            <section>
            <button id="save_trajectory">Save Trajectory!</button>
            <label for="load_trajectory">Choose YAML file to upload</label>
            <input type="file" id="load_trajectory" name="load_trajectory" accept=".yaml">
            <button id="play_trajectory">Play Trajectory!</button>
            </section>
          </form>

      </div>
      
    </main>
<%- include('partials/footer') %>