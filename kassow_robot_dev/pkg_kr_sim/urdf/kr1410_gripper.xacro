<?xml version="1.0"?>
<robot name="kr1410_robot" xmlns:xacro="http://wiki.ros.org/xacro">
    <!-- Author: Shivam -->

    <xacro:include filename="$(find kr1410_cobot)/urdf/kr1410_model.xacro"/>
    <xacro:include filename="$(find kr1410_cobot)/urdf/kr1410_transmissions.xacro"/>
    <xacro:include filename="$(find robotiq_2f_85_gripper)/urdf/robotiq_arg2f_85_model_macro.xacro" />
    <xacro:robotiq_arg2f_85 parent="ee_link" prefix=""/>
    <xacro:include filename="$(find pkg_kr_sim)/urdf/gazebo.xacro"/>

    <!-- Create a dummy link base_link -->
    <link name="base_link"/>
    <joint name="base_link_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_link_1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>

    <link name="pedestal_link">
        <visual>
            <origin xyz="0 0 0.5"/>
            <geometry>
                <box size="0.3 0.3 1.0"/>
            </geometry>
            <material name="pedestal_color">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.5"/>
            <geometry>
                <box size="0.3 0.3 1.0"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="500"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Create end effector link. On this link gripper will be mounted -->
    <link name="ee_link"/>
    <joint name="ee_joint" type="fixed">
        <parent link="tool_io"/>
        <child link="ee_link"/>
        <origin rpy="0 0 0" xyz="0 0 0.0465"/>
    </joint>

</robot>

